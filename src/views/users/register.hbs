<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta http-equiv="X-UA-Compatible" content="IE=edge" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Регистрация</title>
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" />
</head>

<body>
  <div class="row">
    <div class="col-sm-8 mt-3">
      <h1>Регистрация</h1>
      <form class="mt-4" action="/registerProcess" method="POST" enctype="multipart/form-data">
        <input type="hidden" id="imageId" value="{{imagesLength}}" name="imageId">
        <input type="hidden" value="1" name="roleId">
        <div class="form-group">
          <input type="email" name="email" id="input-email" class="form-control border" />
          {{#if messageError}}
              {{#each messageError}}
                <p>{{this.message}}</p>
              {{/each}}
          {{/if}}
        </div>
        <div class="form-group">
          <input type="text" name="pass" id="input-pass" class="form-control border" />
        </div>
        <div class="form-group">
          {{!-- <img src="static\assets\no_image.png" alt=""> --}}
          <input type="file" name="file"  id="input-files" class="form-control border" />
        </div>
        <button type="sumbit" class="btn btn-primary">Submit</button>
      </form>
    </div>
  </div>

</body>

</html>